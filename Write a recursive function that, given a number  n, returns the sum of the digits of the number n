//Write a recursive function that, given a number  n, returns the sum of the digits of the
//number n
import java.util.*;
public class Recursion 
{
	static int sum=0;
	static int sum(int n)
	{
		if(n==0)
		{
			return sum;
		}
		return n+sum(n-1);
	}
	public static void main(String[] args) 
	{
		System.out.print(sum(5));
	}
}
